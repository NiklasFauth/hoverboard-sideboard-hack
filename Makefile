# C sources
C_SOURCES =  \
$(wildcard Src/*.c) \
	CMSIS/system_gd32f1x0.c \
	core_cm3.c \
	Peripherals/src/gd32f1x0_adc.c \
	Peripherals/src/gd32f1x0_dma.c \
